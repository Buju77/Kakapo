use_frameworks!

def testing_pods
    pod 'Quick', '~> 0.9'
    pod 'Nimble', '~> 4.0'
    pod 'SwiftyJSON', '~> 2.3'
    pod 'Alamofire'
    pod 'AFNetworking'
end

target 'Kakapo iOSTests' do
	platform :ios, '8.0'
    testing_pods
end

target 'Kakapo tvOSTests' do
	platform :tvos, '9.2'
    testing_pods
end

target 'Kakapo macOSTests' do
	platform :osx, '10.11'
    testing_pods
end
